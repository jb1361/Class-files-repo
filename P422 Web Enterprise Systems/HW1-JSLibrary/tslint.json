{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
		"curly": [true, "ignore-same-line"],
        "new-parens": true,
		"prefer-for-of": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
		"quotemark": [true, "single", "jsx-double"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}